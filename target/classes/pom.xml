                    <target>1.8</target>
                </configuration>
            </plugin>
		<plugin>
			<artifactId>maven-surefire-plugin</artifactId>
			<version>2.22.2</version>
			<configuration>
				<properties>
					<configurationParameters>
						junit.platform.reporting.open.xml.enabled = true
						junit.platform.reporting.output.dir = C:\ProgramData\Jenkins\.jenkins\workspace\Mathutils\target\surefire-reports
					</configurationParameters>
				</properties>
			</configuration>
		</plugin>
        </plugins>
    </build>
</project>
