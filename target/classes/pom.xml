  <scope>test</scope>
</dependency>
		
	</dependencies>

    <build>
         <sourceDirectory>C:\ProgramData\Jenkins\.jenkins\workspace\Mathutils\src\main\java</sourceDirectory>
        <resources>
            <resource>
                <directory>C:\ProgramData\Jenkins\.jenkins\workspace\Mathutils\src\main\java</directory>
            </resource>
        </resources>
        <testSourceDirectory>C:\ProgramData\Jenkins\.jenkins\workspace\Mathutils\src\test</testSourceDirectory>
        <testResources>
